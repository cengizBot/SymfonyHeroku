{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container" id="div_login">
     

    <form method="post" style="width:500px;margin:0 auto;margin-top:150px" class="form_login">
     

            <div class="header_form_title">
             <h1 class="h3 mb-3 font-weight-normal">Formulaire de Connexion</h1>
            </div>

               {% if error %}
                    {% if error.messageKey == "Invalid credentials." %}
                        <div class="alert alert-danger" style="z-index:20;margin-top:20px">Email ou mot de passe incorrecte.</div>
                    {% else %}
                        <div class="alert alert-danger" style="z-index:20;margin-top:20px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                   
                {% endif %}

            <div class="div_child_form">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <br/>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                <br/>
                <button type="submit" class="btn btn-info">Connexion</button>
            </div>
    </form>

</div>

<script>

    var isMobile = (/Mobile/i.test(navigator.userAgent));

    if(isMobile){
        console.log('mobile');
        let div = $('form');

        $(div).css('width','100%');
    }


</script>


{% endblock %}
